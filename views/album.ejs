<%- include('partials/header.ejs')  %>

<div class="container w-75 m-auto" id="song">
    <br>
    <% for (alb of albums) { %>
        <div class="card track-card">
            <div class="bg-light row align-items-center">
              <div class="col-3">
                <img src="<%=alb.album.images[0].url%>" class="card img-fluid">
              </div>
              <div class="col p-3 m-3">
                <h4><%=alb.album.name%></h4>
                <small><%=alb.album.artists[0].name%></small>
                <br>
              </div>
            </div>
            <a href="<%=alb.album.external_urls.spotify%>"
            class="stretched-link" target="_blank"></a>
        </div>
    <br>
    <% } %>
    <br>
</div>
<%- include('partials/footer.ejs')  %>