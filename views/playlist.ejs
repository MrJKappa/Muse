<%- include('partials/header.ejs')  %>

    <br>
    <div class="container w-75 m-auto" id="myPlaylist">
        <% for (item of list) { %>
            <div class="card track-card">
            <div class="bg-light row align-items-center">
                <div class="col-3">
                    <img src="<%=item.images[0].url%>" class="card img-fluid">
                </div>
                <div class="col p-3 m-3">
                    <h3><%=item.name%></h3>
                    <small><%=item.owner.display_name%></small>
                    <br>
                </div>
            </div>

            <a href="<%=item.external_urls.spotify%>"
            class="stretched-link" target="_blank"></a>
            </div>
            <br>
        <% } %>
    </div>
