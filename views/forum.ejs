<%- include('partials/header.ejs')  %>
<div class="card p-3 m-3 text-center">
  <form action="/forum/post/new">
    <button class="btn btn-lg btn-block btn-success">Create Post</button>
  </form>
</div>

<div class="card p-3 m-3 text-center">
    <form method="POST" action="/forum">
        <input type="radio" name="tag" id="tag" value="Hip-Hop">
        <label for="Hip-Hop">Hip-Hop</label>

        <input type="radio" name="tag" id="tag" value="Pop">
        <label for="Pop">Pop</label>

        <input type="radio" name="tag" id="tag" value="Indie">
        <label for="Indie">Indie</label>

        <input type="radio" name="tag" id="tag" value="Rock">
        <label for="Rock">Rock</label>

        <input type="radio" name="tag" id="tag" value="Classic">
        <label for="Classic">Classic</label>

        <input type="radio" name="tag" id="tag" value="Country">
        <label for="Country">Country</label>

        <input type="radio" name="tag" id="tag" value="Random">
        <label for="Random">Random</label>
        <button class="btn btn-secondary btn-sm"> Filter </button>
    </form>
</div>

<% for (i of posts) { %>
    <div class="card p-3 m-3 bg-light border border-4 text-center post-card">
      <div class="card-body">
        <h5 class="card-title"><%= i.title %></h5>
        <p class="card-text"><strong>OP: </strong><%= i.username%></p>
        <p class="card-text"><strong>Created: </strong><%= i.dateISO%></p>
        <a href="/forum/post?postID=<%=i.postID%>" class="stretched-link"></a>
      </div>

      </div>
      <div class="container text-center">
      <% if (i.posterID == user.id) { %>
          <a href="/forum/post/edit?postID=<%=i.postID%>" class="btn btn-secondary badge-pill p-3"> Edit </a>

          <a href="/forum/post/delete?postID=<%=i.postID%>" class="btn btn-danger badge-pill p-3"> Delete </a>
      <% } %>
      </div>
 <% } %>
 <br>

</body>
</html>
<%- include('partials/footer.ejs')  %>

